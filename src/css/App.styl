@require "helpers/normalize"
@require "helpers/variables"
@require "helpers/mixins"
@require "helpers/extends"

html
body
	width 100%;
	height 100%;

body
	font-family Helvetica, Arial, sans-serif;
	background black

#application-container
	height 100%
	width 100%
	justify-content center
	display flex

[role="main"]
	height 100%
	width 500px
	display flex
	flex-direction column
	justify-content center
	align-items center
	flex-direction column
	color #fff

.result
	font-size 20px
	width 100%
	padding 10px
	box-sizing border-box
	text-align center
	.result-section
		width 100%
		display flex
		justify-content space-between
		> div
			padding 10px
		&.thead
			font-weight bold
	// &-item
		

form
	width 500px
	display flex
	justify-content space-between

	input[type="text"]
		flex-grow 2.5
		height 40px
		border-radius 2px
		border 0
		padding 0 10px
		transition box-shadow .2s linear
		&:focus
			outline none
			box-shadow 0px 0px 10px #fff
	button
		font-family: inherit;
		flex-grow 0.5
		font-size: 100%;
		padding: .5em 1em;
		margin-left 5px
		color: #444;
		height 40px
		color: rgba(0,0,0,.8);
		border: 1px solid #999;
		border: 0 rgba(0,0,0,0);
		background-color: #E6E6E6;
		text-decoration: none;
		border-radius: 2px;
		transition all .2s linear
		&:disabled
			opacity .2
			&:hover
				background-color: #E6E6E6;
		&:hover
			background-image linear-gradient(transparent,rgba(0,0,0,.05) 40%,rgba(0,0,0,.1));