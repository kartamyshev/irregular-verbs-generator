@require "helpers/normalize"
@require "helpers/variables"
@require "helpers/mixins"
@require "helpers/extends"

html
body
	width 100%;
	height 100%;

body
	font-family Helvetica, Arial, sans-serif;
	background black

#application-container
	height 100%
	width 100%
	justify-content center
	display flex

[role="main"]
	height 100%
	width 500px
	display flex
	flex-direction column
	justify-content center
	align-items center
	flex-direction column
	color #fff
	input[type="text"]
		width 480px
		height 40px
		border-radius 2px
		border 0
		padding 0 10px
		transition box-shadow .2s linear
		&:focus
			outline none
			box-shadow 0px 0px 10px #fff

.result
	font-size 20px
	width 100%
	padding 10px
	box-sizing border-box
	text-align center
	.result-section
		width 100%
		display flex
		justify-content space-between
		height 45px
		align-items center
		&.thead
			font-weight bold
			border-bottom 1px solid #fff
			